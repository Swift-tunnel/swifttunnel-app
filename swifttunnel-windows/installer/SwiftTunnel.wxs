<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Product Id="*"
             Name="SwiftTunnel"
             Language="1033"
             Version="0.9.25.0"
             Manufacturer="SwiftTunnel"
             UpgradeCode="8B5E7A12-4F3D-4A2B-9C5E-1D2F3A4B5C6D">

        <Package InstallerVersion="500"
                 Compressed="yes"
                 InstallScope="perMachine"
                 Platform="x64"
                 Description="SwiftTunnel Game Booster"
                 Manufacturer="SwiftTunnel" />

        <MajorUpgrade DowngradeErrorMessage="A newer version of SwiftTunnel is already installed." />
        <MediaTemplate EmbedCab="yes" />

        <!-- Require Admin for installation -->
        <Property Id="MSIUSEREALADMINDETECTION" Value="1" />

        <!-- Icon for Add/Remove Programs -->
        <Icon Id="SwiftTunnelIcon" SourceFile="$(var.SourceDir)\swifttunnel.ico" />
        <Property Id="ARPPRODUCTICON" Value="SwiftTunnelIcon" />

        <!-- Launch app after installation (checkbox enabled by default) -->
        <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch SwiftTunnel" />
        <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOX" Value="1" />
        <Property Id="WixShellExecTarget" Value="[#SwiftTunnelExe]" />

        <CustomAction Id="LaunchApplication"
                      BinaryKey="WixCA"
                      DllEntry="WixShellExec"
                      Impersonate="yes" />

        <!-- Features -->
        <Feature Id="ProductFeature" Title="SwiftTunnel" Level="1">
            <ComponentGroupRef Id="ProductComponents" />
            <ComponentGroupRef Id="DriverComponents" />
            <ComponentGroupRef Id="StartMenuShortcuts" />
            <ComponentGroupRef Id="DesktopShortcuts" />
        </Feature>

        <!-- Custom Actions for Firewall -->
        <!-- Delete existing rule first to prevent duplicates on upgrade -->
        <SetProperty Id="DeleteFirewallRule"
                     Value="&quot;netsh.exe&quot; advfirewall firewall delete rule name=&quot;SwiftTunnel&quot;"
                     Before="DeleteFirewallRule"
                     Sequence="execute" />
        <CustomAction Id="DeleteFirewallRule"
                      BinaryKey="WixCA"
                      DllEntry="WixQuietExec64"
                      Execute="deferred"
                      Impersonate="no"
                      Return="ignore" />

        <!-- Add firewall rule after deleting any existing one -->
        <SetProperty Id="AddFirewallRule"
                     Value="&quot;netsh.exe&quot; advfirewall firewall add rule name=&quot;SwiftTunnel&quot; dir=in action=allow program=&quot;[INSTALLFOLDER]swifttunnel-fps-booster.exe&quot; enable=yes"
                     Before="AddFirewallRule"
                     Sequence="execute" />
        <CustomAction Id="AddFirewallRule"
                      BinaryKey="WixCA"
                      DllEntry="WixQuietExec64"
                      Execute="deferred"
                      Impersonate="no"
                      Return="ignore" />

        <!--
            Windows Packet Filter Driver Installation
            The driver MSI is bundled and installed silently.
            Using msiexec /i with /qn (quiet, no UI) and /norestart
        -->

        <!-- Set command for WinPkFilter driver installation (immediate - expands properties) -->
        <SetProperty Id="InstallWinPkFilter"
                     Value="&quot;msiexec.exe&quot; /i &quot;[DriversFolder]WinpkFilter-x64.msi&quot; /qn /norestart"
                     Before="InstallWinPkFilter"
                     Sequence="execute" />

        <!-- Execute WinPkFilter driver installation (deferred) -->
        <!-- Return="ignore" so app installs even if driver already exists or fails -->
        <CustomAction Id="InstallWinPkFilter"
                      BinaryKey="WixCA"
                      DllEntry="WixQuietExec64"
                      Execute="deferred"
                      Impersonate="no"
                      Return="ignore" />

        <InstallExecuteSequence>
            <!-- Install WinPkFilter driver on fresh install AND upgrades (not on uninstall) -->
            <Custom Action="InstallWinPkFilter" After="InstallFiles">NOT REMOVE~="ALL"</Custom>
            <!-- Delete firewall rule on install (cleanup duplicates) AND uninstall -->
            <Custom Action="DeleteFirewallRule" After="InstallWinPkFilter">1</Custom>
            <!-- Add firewall rule only on install, not uninstall -->
            <Custom Action="AddFirewallRule" After="DeleteFirewallRule">NOT REMOVE~="ALL"</Custom>
        </InstallExecuteSequence>

        <!-- Launch app after installation completes (runs in UI sequence) -->
        <InstallUISequence>
            <Custom Action="LaunchApplication" After="ExecuteAction">WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 AND NOT Installed</Custom>
        </InstallUISequence>

        <!-- Directory Structure -->
        <Directory Id="TARGETDIR" Name="SourceDir">
            <Directory Id="ProgramFiles64Folder">
                <Directory Id="INSTALLFOLDER" Name="SwiftTunnel">
                    <Directory Id="DriversFolder" Name="drivers" />
                </Directory>
            </Directory>
            <Directory Id="ProgramMenuFolder">
                <Directory Id="ApplicationProgramsFolder" Name="SwiftTunnel" />
            </Directory>
            <Directory Id="DesktopFolder" Name="Desktop" />
        </Directory>

        <!-- UI -->
        <UIRef Id="WixUI_InstallDir" />
        <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
        <WixVariable Id="WixUILicenseRtf" Value="license.rtf" />

    </Product>

    <!-- Component Groups -->
    <Fragment>
        <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
            <Component Id="MainExecutable" Guid="A1B2C3D4-E5F6-7890-ABCD-EF1234567890" Win64="yes">
                <File Id="SwiftTunnelExe"
                      Source="$(var.SourceDir)\swifttunnel-fps-booster.exe"
                      KeyPath="yes" />
            </Component>
            <Component Id="WintunDll" Guid="B2C3D4E5-F6A7-8901-BCDE-F23456789012" Win64="yes">
                <File Id="WintunDll"
                      Source="$(var.SourceDir)\wintun.dll"
                      KeyPath="yes" />
            </Component>
            <Component Id="AppIcon" Guid="D4E5F6A7-B8C9-0123-DEF0-456789012345" Win64="yes">
                <File Id="SwiftTunnelIco"
                      Source="$(var.SourceDir)\swifttunnel.ico"
                      KeyPath="yes" />
            </Component>
        </ComponentGroup>

        <ComponentGroup Id="DriverComponents" Directory="DriversFolder">
            <!-- Windows Packet Filter driver MSI - bundled for silent installation -->
            <Component Id="WinPkFilterMsi" Guid="B9A21C8B-429B-4E3B-92C8-1C4194A0282E" Win64="yes">
                <File Id="WinpkFilterMsi"
                      Source="$(var.SourceDir)\drivers\WinpkFilter-x64.msi"
                      KeyPath="yes" />
            </Component>
        </ComponentGroup>

        <ComponentGroup Id="StartMenuShortcuts" Directory="ApplicationProgramsFolder">
            <Component Id="ApplicationShortcut" Guid="C3D4E5F6-A7B8-9012-CDEF-345678901234">
                <Shortcut Id="ApplicationStartMenuShortcut"
                          Name="SwiftTunnel"
                          Description="SwiftTunnel Game Booster"
                          Target="[INSTALLFOLDER]swifttunnel-fps-booster.exe"
                          WorkingDirectory="INSTALLFOLDER"
                          Icon="SwiftTunnelIcon">
                    <ShortcutProperty Key="System.AppUserModel.ID" Value="SwiftTunnel.GameBooster"/>
                </Shortcut>
                <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall" />
                <RegistryValue Root="HKCU" Key="Software\SwiftTunnel" Name="installed" Type="integer" Value="1" KeyPath="yes" />
            </Component>
        </ComponentGroup>

        <ComponentGroup Id="DesktopShortcuts" Directory="DesktopFolder">
            <Component Id="DesktopShortcut" Guid="E5F6A7B8-C9D0-1234-EF01-567890123456">
                <Shortcut Id="DesktopShortcutId"
                          Name="SwiftTunnel"
                          Description="SwiftTunnel Game Booster"
                          Target="[INSTALLFOLDER]swifttunnel-fps-booster.exe"
                          WorkingDirectory="INSTALLFOLDER"
                          Icon="SwiftTunnelIcon">
                    <ShortcutProperty Key="System.AppUserModel.ID" Value="SwiftTunnel.GameBooster"/>
                </Shortcut>
                <RemoveFolder Id="CleanUpDesktopShortcut" Directory="DesktopFolder" On="uninstall" />
                <RegistryValue Root="HKCU" Key="Software\SwiftTunnel" Name="desktopShortcut" Type="integer" Value="1" KeyPath="yes" />
            </Component>
        </ComponentGroup>
    </Fragment>
</Wix>
